<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="150px"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ArtistActivity">

    <TextView
        android:id="@+id/rank_artist_detail"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <TextView
        android:id="@+id/name_artist_detail"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <TextView
        android:id="@+id/external_url_artist_detail"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <TextView
        android:id="@+id/genres_artist_detail"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <ImageView
        android:id="@+id/image_artist_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>